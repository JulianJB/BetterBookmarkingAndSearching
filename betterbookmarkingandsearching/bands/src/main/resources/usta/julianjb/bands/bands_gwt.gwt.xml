<?xml version="1.0" encoding="UTF-8"?>
<!-- The GWT module for setting the properties of the application -->
<module rename-to='bands_gwt'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User' />

  <!-- Specify the default GWT style sheet.                       -->
  <!-- Not using any default GWT style sheet.                     -->

  <!-- Other module inherits                                      -->
  <!-- Specify the inherit of the RestyGWT library                -->
  <inherits name="org.fusesource.restygwt.RestyGWT"/>

  <!-- Specify the app entry point class.                         -->
  <entry-point class='usta.julianjb.bands.client.bands_gwt' />

  <!-- Specify the paths for translatable code                    -->
  <source path='client' />
  <source path='shared' />
</module>